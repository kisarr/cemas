{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
	<section class="articles">
		{% for article in articles %}
			<div class="card mb-3">
  <h3 class="card-header">Article # {{ article.id }} </h3>
  <div class="card-body">
    <h5 class="card-title">{{ article.title }}</h5>
    <h6 class="card-subtitle text-muted">Catégorie : {{ article.category.title }}</h6>
  </div>
  <img style="height: 300px; width: 100%; display: block;" src="{{ article.image }}" alt="Card image">
  <div class="card-body">
    <p class="card-text">{{ article.content | raw }}</p>
  </div>
  <div class="card-body">
    <a href="{{ path('blog_show', {'id':article.id}) }}" class="card-link btn btn-info">Lire la suite</a>
  </div>
  <div class="card-footer text-muted">
    Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }}
  </div>
</div>
		{% endfor %}
	</section>
{% endblock %}


